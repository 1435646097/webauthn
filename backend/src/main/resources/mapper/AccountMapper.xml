<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.webauthn.mapper.AccountMapper">

    <!-- 根据登录账号查询用户 ID -->
    <select id="selectUserIdByLogonId" resultType="java.lang.Integer">
        SELECT UserId
        FROM tbl_account
        WHERE LogonId = #{logonId}
        LIMIT 1
    </select>

    <!-- 根据用户 ID 查询用户名（姓名） -->
    <select id="selectUserNameByUserId" resultType="java.lang.String">
        SELECT UserName
        FROM tbl_account
        WHERE UserId = #{userId}
        LIMIT 1
    </select>

    <!-- 根据登录账号查询用户名（姓名） -->
    <select id="selectUserNameByLogonId" resultType="java.lang.String">
        SELECT UserName
        FROM tbl_account
        WHERE LogonId = #{logonId}
        LIMIT 1
    </select>

    <!-- 检查用户是否存在 -->
    <select id="existsByLogonId" resultType="java.lang.Integer">
        SELECT COUNT(1)
        FROM tbl_account
        WHERE LogonId = #{logonId}
        LIMIT 1
    </select>

    <!-- 根据用户 ID 查询登录账号 -->
    <select id="selectLogonIdByUserId" resultType="java.lang.String">
        SELECT LogonId
        FROM tbl_account
        WHERE UserId = #{userId}
        LIMIT 1
    </select>

</mapper>
